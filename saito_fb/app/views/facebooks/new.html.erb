<h1>Facebook</h1>
<%= form_with(model: @facebook, local: true, url: choose_new_or_edit) do |form| %>
<% if @facebook.errors.any? %>
<div id="error_explanation">
  <h2><%= @facebook.errors.count %>件のエラーがあります。</h2>
  <ul>
    <% @facebook.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="fb_name">
  <%= form.label :name %>
  <%= form.text_field :name %>
</div>
<div class="fb_name">
  <%= form.label :content %>
  <%= form.text_field :content %>
</div>
<div class="fb_name">
  <%= form.label :image %>
  <%= image_tag(@facebook.image.url) if @facebook.image && @facebook.image.url %>
  <%= form.file_field :image %>
  <%= form.hidden_field :image_cache %>
</div>
<%= form.submit "投稿" %>
<%= link_to "ブログ一覧",facebooks_path %>

<% end %>
