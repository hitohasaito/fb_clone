<h1>Facebook</h1>

<%= form_with(model: @facebook, local: true) do |form| %>
  <div class="fb_name">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="fb_name">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <div class="fb_name">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>
  <%= form.submit %>
<% end %>
<p><%= link_to "投稿一覧へ",facebooks_path %></p>
