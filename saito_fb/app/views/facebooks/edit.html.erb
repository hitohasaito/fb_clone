<h1>ブログを編集する</h1>

<%= form_with(model: @facebook, local: true) do |form| %>
  <% if @facebook.errors.any? %>
    <div id="error_explanation">
      <h2><%= @facebook.errors.count %>件のエラーがあります。</h2>
    　  <ul>
      　  <% @facebook.errors.full_messages.each do |msg| %>
        　  <li><%= msg %></li>
      　　<% end %>
    　　</ul>
　  </div>
  <% end %>
  <div class="fb_content">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="fb_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <div class="fb_content">
    <%= form.label :image %>
    <%= form.file_field :image %>
    <%= image_tag(@facebook.image.url) if @facebook.image && @facebook.image.url %>
    <%= form.hidden_field :image_cache %>
    <%= form.submit "投稿する" %>
    </div>
<% end %>
